<div class="container row d-flex justify-content-center mx-auto w-75">
	<div class="col-md-12 d-flex justify-content-center border rounded w-75 mt-5 mb-5 mx-auto">
		<div class="w-50">
			<div class="col d-flex justify-content-center mt-5 mb-3">
				<h2>Вход</h2>
			</div>
			<div>
				<form method="post">
					<div class="form-outline mb-4">
						<input type="email" name="email" class="form-control" value="{{fields.email}}" placeholder="Введите электронную почту"/>
						<ul class="error-message mb-0">
							{% for error in errors.email %}
								<li>{{error}}</li>
							{% endfor %}
						</ul>
					</div>
					<div class="form-outline mb-4">
						<input type="password" name="password" class="form-control" value="{{fields.password}}" placeholder="Введите пароль"/>
						<ul class="error-message mb-0">
							{% for error in errors.password %}
								<li>{{error}}</li>
							{% endfor %}
						</ul>
					</div>
					<div class="row mb-1">
						<div class="col d-flex justify-content-center">
							<div class="form-check">
								<input class="form-check-input" type="checkbox" value="1" name="isRemember" id="isRemember" checked/>
								<label class="form-check-label" for="isRemember">
									Запомнить меня
								</label>
							</div>
						</div>
						<div class="col">
							<a href="#!">Забыли пароль?</a>
						</div>
					</div>
					<div>
						<ul class="error-message">
							{% for error in errors.common %}
								<li>{{error}}</li>
							{% endfor %}
						</ul>
					</div>
					<button class="btn btn-primary btn-block mb-5 w-100">Войти</button>
				</form>
			</div>
		</div>
	</div>
</div>
